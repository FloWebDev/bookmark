{% extends 'base.html.twig' %}

{% block title %}{{ Constant.SIGN_IN }}{% endblock %}

{% block body %}
<form method="POST" id="loginForm" class="col-10 col-md-4 mx-auto mt-5 p-3" novalidate>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal"><i class="fas fa-user-astronaut"></i> {{ Constant.SIGN_IN }}</h1>
    <label for="inputUsername">Identifiant</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-3" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-3" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
    #}
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>


    <input class="btn btn-lg btn-dark mx-auto" type="submit" value="{{ Constant.SIGN_IN }}">

    <div class="mt-2 mb-0 text-center">
        <small>
            <a href="{{ path('user_new') }}">{{ Constant.SIGN_UP }}</a> - <a href="{{ path('forgot_password') }}">{{ Constant.FORGOT_PASSWORD }}</a>
        </small>
    </div>
</form>
{% endblock %}
