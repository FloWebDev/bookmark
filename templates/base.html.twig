<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="{{ asset('assets/favicon.ico') }}" type="image/x-icon">
    <link rel="stylesheet" href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}{{ assets_version }}">
    <link rel="stylesheet" href="{{ asset('lib/fontawesome/css/all.min.css') }}{{ assets_version }}">
    <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}{{ assets_version }}">
    {% if app.request.get('_route') %}
        <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}{{ assets_version }}">
    {% endif %}
    {% if app.user %}
        <link rel="stylesheet" href="{{ asset('assets/css/loader.css') }}{{ assets_version }}">
        <link rel="stylesheet" href="{{ asset('assets/css/navbar.css') }}{{ assets_version }}">
        <style>
            body {
                background-image: url("{{ asset('assets/wallpapers/' ~ app.user.wallpaper) }}");
            }
        </style>
    {% endif %}
    {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
    <title>{% block title %}BookMark{% endblock %}</title>



    </head>
    <body>

        <div class="container-fluid px-0 px-sm-1 px-md-2">
            {% if app.user %}
            <div class="row col-12 mx-0 px-0">
                {# Menu #}
                {{ knp_menu_render('main', {'template' : 'menu/custom_knp_menu.html.twig'}) }}
            </div>
            {% endif %}
            <div id="flashMessages" class="row col-12">
                {# read and display all flash messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} mx-auto" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="row col-12 m-0 p-0">
                {# Content #}
                {% block body %}{% endblock %}
            </div>
        </div>


    <script src="{{ asset('lib/jquery/jquery.min.js') }}{{ assets_version }}"></script>
    <script src="{{ asset('lib/bootstrap/js/bootstrap.min.js') }}{{ assets_version }}"></script>
    <script src="{{ asset('lib/bootstrap/js/bootstrap.bundle.min.js') }}{{ assets_version }}"></script>
    <script src="{{ asset('assets/js/app.js') }}{{ assets_version }}"></script>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>