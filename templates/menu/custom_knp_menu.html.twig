{# https://stackoverflow.com/questions/58220574/override-knp-menu-template #}
<nav class="navbar navbar-expand-lg navbar-light bg-light my-3 p-0">
  <a class="navbar-brand" href="{{ path('page_index') }}">Dashboard</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  {% if item.children %}
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      {% for child in item.children %}
      <li class="nav-item active">
        <a class="nav-link" href="{{ child.uri }}">{{ child.name }}</span></a>
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</nav>