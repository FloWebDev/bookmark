{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/gallery.css') }}">
{% endblock %}

{% block title %}{{ Constant.PAGES_LIST_INDEX }}{% endblock %}

{% block body %}
    <h1 class="text-light">{{ Constant.PAGES_LIST_INDEX }} 
    <a href="{{ path('page_new') }}" type="button" class="btn btn-dark text-info p-0 px-1"><i class="fas fa-plus-square"></i></a></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Ordre (à supprimer)</th>
                <th><i class="fas fa-tools"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>{{ page.z }}</td>
                <td>

                    <a href="{{ path('page_show', {'user_id': page.user.id, 'z': page.z}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}"><i class="fas fa-pen"></i></a>
                    {% include 'page/_delete_modal.html.twig' %} - 
                    {% if loop.first == false %}
                    <a href="{{ path('page_order', {id: page.id, direction: 'up'}) }}"><i class="fas fa-arrow-up"></i></a>
                    {% endif %}
                    {% if loop.last == false %}
                    <a href="{{ path('page_order', {id: page.id, direction: 'down'}) }}"><i class="fas fa-arrow-down"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ Constant.NO_RECORDS_FOUND }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2 class="h1 text-light col-12 p-0">Fonds d'écran</h2>
    <div id="gallery">
        {% for label, wallpaper in Constant.WALLPAPERS %}
        {% set url = asset('assets/wallpapers/' ~ wallpaper) %}
            <div class="picture {% if app.user.wallpaper == wallpaper %}active{% endif %}" 
                title="{{ label }}"
                alt="{{ wallpaper }}"
                style="background-image: url('{{ url }}');"
                data-wallpaper="{{ wallpaper }}">
            </div>
            
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
<script>
    const changeWallpaperPath = "{{ path('wallpaper_change')|e('js') }}";
</script>
    <script src="{{ asset('assets/js/dashboard.js') }}"></script>
{% endblock %}