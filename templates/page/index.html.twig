{% extends 'base.html.twig' %}

{% block title %}Liste des pages{% endblock %}

{% block body %}
    <h1>Liste des pages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th><i class="fas fa-tools"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>
                    <a href="{{ path('page_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">edit</a>
                    {% include 'page/_delete_modal.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun élément trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_new') }}" type="button" class="btn btn-danger"><i class="fas fa-plus-square"></i></a>
{% endblock %}
