{% extends 'base.html.twig' %}

{% block title %}Liste des pages{% endblock %}

{% block body %}
    <h1>Liste des pages 
    <a href="{{ path('page_new') }}" type="button" class="btn btn-dark p-0 px-1"><i class="fas fa-plus-square"></i></a></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Ordre (à supprimer)</th>
                <th><i class="fas fa-tools"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>{{ page.z }}</td>
                <td>
                    <a href="{{ path('page_show', {'user_id': page.user.id, 'z': page.z}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}"><i class="fas fa-edit"></i></a>
                    {% include 'page/_delete_modal.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun élément trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
